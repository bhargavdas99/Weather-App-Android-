<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/spalsh_screen">

    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#2A1A1A1A"
        android:fontFamily="casual"
        android:text="WEATHER"
        android:textAlignment="center"
        android:textColor="#EDE9E9"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A1A1A1A"
        android:text="by Bhargab"
        android:textAlignment="center"
        android:textColor="#FEFCFC"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:height="70dp"
        android:background="#6B292929"
        android:hint="Enter City Name"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="get"
        android:text="Get Weather"
        android:textColor="#F4EFEF"
        android:textSize="25sp"
        app:backgroundTint="#5D03A2" />

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Weather Icon"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="#4DFFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="70sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/celciusLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Celcius Logo"
            android:visibility="invisible"
            app:srcCompat="@drawable/centigrade" />
    </LinearLayout>

</LinearLayout>